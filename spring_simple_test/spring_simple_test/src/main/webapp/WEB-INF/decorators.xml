        <pattern>/error.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/security/loginInit.action*</pattern>
        <pattern>/security/login.action*</pattern>
        <pattern>/security/retrievePassword.action</pattern>
